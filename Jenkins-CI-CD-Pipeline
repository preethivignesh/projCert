pipeline {
  environment {
    registry = "preethisekar2005/webapp"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent { label 'ip-172-31-32-90'}
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/preethivignesh/projCert.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
   stage('Run Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            sh "docker rmi $registry:$BUILD_NUMBER"
            sh "docker run -d -p 8004:registry:$BUILD_NUMBER"
          }
        }
      }
    }
        stage('Remove Unused docker image') {
      steps{
        sh "docker rmi $registry:$BUILD_NUMBER"
      }
    }
      }
}
